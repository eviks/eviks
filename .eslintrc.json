{
  "extends": ["airbnb-base", "next/core-web-vitals", "prettier"],
  "rules": {
    "arrow-body-style": ["error", "always"],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "class-methods-use-this": "off",
    "global-require": "off",
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",
    "no-shadow": "off",
    "no-unused-vars": "off"
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "rules": {
        "no-shadow": "error",
        "no-unused-vars": "error"
      }
    }
  ],
  "globals": {
    "NodeJS": true
  }
}
